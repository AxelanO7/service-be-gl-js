generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Category {
  id        String    @id
  createdAt DateTime  @default(now())
  updatedAt DateTime
  Service   Service[] @relation("CategoryToService")
}

model Location {
  id        String    @id
  latitude  Float
  longitude Float
  address   String
  city      String
  state     String
  province  String
  country   String
  createdAt DateTime  @default(now())
  updatedAt DateTime
  Service   Service[]
}

model Price {
  id        String    @id
  original  Float
  discount  Float
  final     Float
  createdAt DateTime  @default(now())
  updatedAt DateTime
  Service   Service[]
}

model Service {
  id          String        @id
  name        String
  locationId  String
  priceId     String
  description String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
  Location    Location      @relation(fields: [locationId], references: [id])
  Price       Price         @relation(fields: [priceId], references: [id])
  Category    Category[]    @relation("CategoryToService")
  SubCategory SubCategory[] @relation("ServiceToSubCategory")
}

model SubCategory {
  id        String    @id
  createdAt DateTime  @default(now())
  updatedAt DateTime
  Service   Service[] @relation("ServiceToSubCategory")
}

model User {
  id        String   @id
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime
  pushToken String?
}
