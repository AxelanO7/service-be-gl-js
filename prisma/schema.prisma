generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Category {
  id          String        @id
  name        String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
  Subcategory Subcategory[]
  Service     Service[]
}

model Subcategory {
  id         String    @id
  name       String
  category   Category  @relation(fields: [categoryId], references: [id])
  categoryId String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime
  Service    Service[]
}

model Location {
  id        String    @id
  latitude  Float
  longitude Float
  address   String
  city      String
  state     String
  province  String
  country   String
  createdAt DateTime  @default(now())
  updatedAt DateTime
  Service   Service[]
}

model Price {
  id        String    @id
  original  Float
  discount  Float
  final     Float
  createdAt DateTime  @default(now())
  updatedAt DateTime
  Service   Service[]
}

model Service {
  id            String      @id
  name          String
  locationId    String
  priceId       String
  description   String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime
  Location      Location    @relation(fields: [locationId], references: [id])
  Price         Price       @relation(fields: [priceId], references: [id])
  Category      Category    @relation(fields: [categoryId], references: [id])
  categoryId    String
  Subcategory   Subcategory @relation(fields: [subcategoryId], references: [id])
  subcategoryId String
}

model User {
  id        String   @id
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime
  pushToken String?
}
